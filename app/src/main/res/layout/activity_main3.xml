<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lincyu.eleventh_project.Main3Activity"
    android:background="@drawable/background">

    <EditText

        android:id="@+id/et_people"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="人數"
        android:layout_marginTop="37dp"
        android:numeric="integer"
        android:layout_below="@+id/tv_state"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="比小"
        android:textSize = "24sp"
        android:textColor="@android:color/white"
        android:id="@+id/btn_small"
        android:background="@drawable/button"
        android:layout_below="@+id/tv_state"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="比大"
        android:textSize = "24sp"
        android:textColor="@android:color/white"
        android:id="@+id/btn_big"
        android:layout_alignBottom="@+id/btn_small"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/tv_state"
        android:layout_centerHorizontal="true"
        android:text="比大還比小"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="50dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="重來"
        android:id="@+id/btn_restart"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btn_big"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textSize="24dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="搖動"
        android:id="@+id/btn_shake"
        android:background="@drawable/button"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/btn_restart"
        android:layout_alignParentStart="true" />

</RelativeLayout>
