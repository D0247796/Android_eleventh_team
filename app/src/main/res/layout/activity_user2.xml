<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="lincyu.eleventh_project.Main4Activity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="我方金額:"
        android:id="@+id/tv_mymoney"
        android:layout_alignTop="@+id/et_money"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="17dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/et_money"
        android:hint="金錢"
        android:layout_below="@+id/tv_state"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:numeric="integer"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/tv_state"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="開始下注吧\n填完金錢後再按按鈕" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="大"
        android:id="@+id/btn_big"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="小"
        android:id="@+id/btn_small"
        android:layout_alignBottom="@+id/btn_big"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/btn_big"
        android:layout_alignParentEnd="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="4-7"
                android:id="@+id/btn_one"
                android:background="@drawable/button"
                android:textSize="20dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="8-10"
                android:id="@+id/btn_two"
                android:background="@drawable/button"
                android:textSize="20dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="11-13"
                android:id="@+id/btn_three"
                android:layout_column="4"
                android:background="@drawable/button"
                android:textSize="20dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:text="14-17"
                android:id="@+id/btn_four"
                android:layout_column="7"
                android:background="@drawable/button"
                android:textSize="20dp"
                android:textColor="#ffffff" />
        </TableRow>
    </TableLayout>

    <EditText
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:id="@+id/et_number"
        android:layout_below="@+id/tableLayout"
        android:layout_alignParentStart="true"
        android:hint="點數"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:numeric="integer"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/et_msg"
        android:layout_above="@+id/btn_number"
        android:layout_alignEnd="@+id/tableLayout"
        android:hint="對話框"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="猜幾點"
        android:id="@+id/btn_number"
        android:background="@drawable/button"
        android:layout_below="@+id/et_number"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="對方金額:"
        android:id="@+id/tv_urmoney"
        android:layout_below="@+id/tv_mymoney"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="17dp"
        android:textIsSelectable="false" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="豹子"
        android:id="@+id/btn_same"
        android:background="@drawable/button"
        android:layout_above="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="發送訊息"
        android:id="@+id/btn_msg"
        android:layout_alignBottom="@+id/btn_number"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</RelativeLayout>
